<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.androidbootcamp.flagfinale.MainActivity"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:id="@+id/imgPhilippines"
        android:src="@drawable/philippines"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:id="@+id/imgNepal"
        android:src="@drawable/nepal"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgPhilippines"
        android:layout_toEndOf="@+id/imgPhilippines"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:id="@+id/imgSaudi"
        android:src="@drawable/saudi"
        android:layout_below="@+id/imgPhilippines"
        android:layout_toLeftOf="@+id/imgNepal"
        android:layout_toStartOf="@+id/imgNepal"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:id="@+id/imgEthiopia"
        android:src="@drawable/ethiopia"
        android:layout_alignTop="@+id/imgSaudi"
        android:layout_alignLeft="@+id/imgNepal"
        android:layout_alignStart="@+id/imgNepal" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:id="@+id/imgUnitedstates"
        android:src="@drawable/unitedstates"
        android:layout_below="@+id/imgEthiopia"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnStart"
        android:id="@+id/btnStart"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp" />

</RelativeLayout>
